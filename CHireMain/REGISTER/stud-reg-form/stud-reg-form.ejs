    <script>
        // Assuming 'district' is the ID of the district dropdown menu
        $('#districts').change(function() {
            var selectedDistrict = $(this).val();
    
            // Make AJAX request to fetch institute names
            $.ajax({
                url: '/institutes', // Endpoint on your server to handle the request
                method: 'GET',
                data: { district: selectedDistrict },
                success: function(response) {
                    // Populate the dropdown menu with received institute names
                    $('#institute').empty();
                    response.institutes.forEach(function(institute) {
                        $('#institute').append($('<option>', {
                            value: institute
                        }));
                    });
                },
                error: function(xhr, status, error) {
                    console.error('Error fetching institutes:', error);
                }
            });
        });

        function createSkillElement(skillText, container, skillType) {
            // Create a skill element
            const skillElement = document.createElement('div');
            skillElement.className = 'skill';

            // Display skill text
            skillElement.textContent = skillText;

            // Create a close button
            const closeButton = document.createElement('span');
            closeButton.className = 'closeButton';
            closeButton.textContent = 'X';

            // Add click event listener to remove the skill on close button click
            closeButton.addEventListener('click', function () {
                container.removeChild(skillElement);
            });
        
            // Append close button to the skill element
            skillElement.appendChild(closeButton);
        
            // Create hidden input field to store the skill value
            const hiddenInput = document.createElement('input');
            hiddenInput.type = 'hidden';
            if (skillType === 'soft') {
                hiddenInput.name = 'softskills[]'; // Use an array to store multiple soft skills
            } else if (skillType === 'hard') {
                hiddenInput.name = 'hardskills[]'; // Use an array to store multiple hard skills
            }
            hiddenInput.value = skillText;
        
            // Append hidden input field to the skill element
            skillElement.appendChild(hiddenInput);
        
            return skillElement;
        }       

        function handleSkillsInput(input, container, skillType) {
            input.addEventListener('keydown', function (event) {
                if (event.key === 'Enter' && this.value.trim() !== '') {
                    // Create a skill element
                    const skillElement = createSkillElement(this.value.trim(), container, skillType);
                
                    // Append the skill to the skills container
                    container.appendChild(skillElement);
                
                    // Clear the input field
                    this.value = '';
                
                    // Prevent form submission on Enter key press
                    event.preventDefault();
                }
            });
        }

        const softSkillsInput = document.getElementById('softSkillsInput');
        const softSkillsContainer = document.getElementById('softSkillsContainer');
        handleSkillsInput(softSkillsInput, softSkillsContainer, 'soft');

        const hardSkillsInput = document.getElementById('hardSkillsInput');
        const hardSkillsContainer = document.getElementById('hardSkillsContainer');
        handleSkillsInput(hardSkillsInput, hardSkillsContainer, 'hard');

        // Capitalise input fields
        function capitalizeInput() {
            var nameInput = document.getElementById('name');
            var addressInput = document.getElementById('address');

            nameInput.value = capitalizeFirstLetterEachWord(nameInput.value);
            addressInput.value = capitalizeFirstLetterEachWord(addressInput.value);
        }

        function capitalizeFirstLetterEachWord(str) {
            return str.replace(/\b\w+\b/g, function(word) {
                return word.charAt(0).toUpperCase() + word.slice(1).toLowerCase();
            });
        }
        function onSubmit(){
            capitalizeInput();
        }

        // PASSWORD TOGGLE EYE ICON
        const eyeIcons = document.querySelectorAll('.eye-icon');
        const passwordInputs = document.querySelectorAll('input[type="password"]');

        eyeIcons.forEach(icon => {
            icon.addEventListener('click', function() {
                const passwordInput = this.previousElementSibling;
                const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
                passwordInput.setAttribute('type', type);
                // Toggle icon based on password visibility
                this.querySelector('i').classList.toggle('fa-eye');
                this.querySelector('i').classList.toggle('fa-eye-slash');
            });
        });

