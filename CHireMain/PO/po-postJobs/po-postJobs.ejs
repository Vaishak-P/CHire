                                    <input type="text" id="baseLocation" name="baseLocation" required>

                                </div>
                                <div class="formSection2">
                                    <label for="applicationDeadline">Application Deadline:</label>
                                    <input type="date" id="applicationDeadline" name="applicationDeadline" required>

                                    <label for="experienceRequired">Experience Required:</label>
                                    <input type="text" id="experienceRequired" name="experienceRequired">

                                    <label for="jobDescription">Job Description:</label>
                                    <textarea id="jobDescription"  required></textarea>
                                
                                </div>
                            </div>
