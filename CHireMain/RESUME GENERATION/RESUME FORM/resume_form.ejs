       <script>
        function createHobbiesElement(Text, container, Type) {
            // Create a skill element
            const hobbiesElement = document.createElement('div');
            hobbiesElement.className = 'hobbies';

            // Display skill text
            hobbiesElement.textContent = Text;

            // Create a close button
            const closeButton = document.createElement('span');
            closeButton.className = 'closeButton';
            closeButton.textContent = 'X';

            // Add click event listener to remove the skill on close button click
            closeButton.addEventListener('click', function () {
                container.removeChild(hobbiesElement);
            });
        
            // Append close button to the skill element
            hobbiesElement.appendChild(closeButton);
        
            // Create hidden input field to store the skill value
            const hiddenInput = document.createElement('input');
            hiddenInput.type = 'hidden';
            if (Type === 'soft') {
                hiddenInput.name = 'hobbies[]'; // Use an array to store multiple soft skills
            // } else if (skillType === 'hard') {
            //     hiddenInput.name = 'hardskills[]'; // Use an array to store multiple hard skills
            }
            hiddenInput.value = Text;
        
            // Append hidden input field to the skill element
            hobbiesElement.appendChild(hiddenInput);
        
            return hobbiesElement;
        }       

        function handleHobbiesInput(input, container,Type) {
            input.addEventListener('keydown', function (event) {
                if (event.key === 'Enter' && this.value.trim() !== '') {
                    // Create a skill element
                    const hobbiesElement = createHobbiesElement(this.value.trim(), container, Type);
                
                    // Append the skill to the skills container
                    container.appendChild(hobbiesElement);
                
                    // Clear the input field
                    this.value = '';
                
                    // Prevent form submission on Enter key press
                    event.preventDefault();
                }
            });
        }

        const input = document.getElementById('hobbiesInput');
        const Container = document.getElementById('hobbiesContainer');
        handleHobbiesInput(input, Container, 'soft');
       </script>
            
